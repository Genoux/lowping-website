{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": ["./src/components/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@lib/*": ["./src/lib/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@features/*": ["./src/features/*"],
      "@events/*": ["./src/features/events/*"],
      "@registration/*": ["./src/features/registration/*"],
      "@home/*": ["./src/features/home/*"],
      "@generated/*": ["./src/types/generated-types"],
      "@package": ["./package.json"],
      "@app/*": ["./src/app/*"],
      "src/lib/utils": ["./src/lib/utils"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/features/home/components/Hero/HeroContent.tss"
  ],
  "exclude": ["node_modules"]
}
